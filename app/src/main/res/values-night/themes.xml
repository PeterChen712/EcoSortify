<resources xmlns:tools="http://schemas.android.com/tools">    <!-- Base application theme. -->
    <style name="Base.Theme.Ecosortify" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.Ecosortify" parent="Base.Theme.Ecosortify">
        <!-- Primary brand color for dark theme -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_dark</item>
        <item name="colorSecondaryVariant">@color/accent_darker</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
    </style>    <!-- Splash screen theme -->
    <style name="Theme.Ecosortify.Splash" parent="Theme.Ecosortify">
        <item name="android:windowBackground">@drawable/splash_background_dark</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>    <!-- Authentication theme -->
    <style name="Theme.Ecosortify.Auth" parent="Theme.Ecosortify">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/background_dark</item>
    </style>
</resources>