<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@drawable/curved_header_background"
    android:paddingHorizontal="@dimen/header_padding_horizontal"
    android:paddingTop="@dimen/header_padding_top"
    android:paddingBottom="@dimen/header_padding_vertical"
    android:orientation="vertical"
    android:gravity="center">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glean Go"
        android:textSize="@dimen/header_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/header_text_primary"
        android:layout_marginBottom="@dimen/header_title_margin_bottom"
        android:fontFamily="sans-serif-medium" />

    <!-- User Greeting -->
    <TextView
        android:id="@+id/tvWelcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back!"
        android:textSize="@dimen/header_greeting_text_size"
        android:textColor="@color/header_text_secondary"
        android:fontFamily="sans-serif" />

</LinearLayout>
