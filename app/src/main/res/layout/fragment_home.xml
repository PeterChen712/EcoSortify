<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">        <!-- Enhanced Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/gradient_header_background"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvWelcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌱 Selamat datang!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvCurrentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📅 Hari ini"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvMotivation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💚 Mari bersihkan dunia!"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:alpha="0.95" />

        </LinearLayout>        <!-- Enhanced Quick Stats Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvQuickStatsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📊 STATISTIK MINGGU INI"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/circle_indicator"
                        android:backgroundTint="@color/environmental_green" />

                </LinearLayout>

                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Left Column Stats -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:id="@+id/tvQuickStatsDistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🏃 Total Lari: 0 km"
                            android:textSize="15sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="12dp"
                            android:drawablePadding="8dp" />

                        <TextView
                            android:id="@+id/tvQuickStatsPoints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="⭐ Poin: 0"
                            android:textSize="15sp"
                            android:textColor="@color/text_secondary"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                    <!-- Right Column Stats -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvQuickStatsTrash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🗑️ Sampah Terkumpul: 0"
                            android:textSize="15sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="12dp"
                            android:drawablePadding="8dp" />

                        <TextView
                            android:id="@+id/tvQuickStatsBadge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🏆 Badge: Eco Beginner"
                            android:textSize="15sp"
                            android:textColor="@color/text_secondary"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>        <!-- Enhanced Quick Action Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚀 AKSI CEPAT"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickAction1"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="🏃‍♂️ Mulai Plogging"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/environmental_green"
                        android:textColor="@android:color/white"
                        app:elevation="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickAction2"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="📊 Lihat Statistik"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/environmental_green"
                        android:textColor="@color/environmental_green"
                        app:strokeWidth="2dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickAction3"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="📰 Berita Lingkungan"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/environmental_green"
                        android:textColor="@color/environmental_green"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickAction4"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="🗺️ Peta Sampah"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/environmental_green"
                        android:textColor="@color/environmental_green"
                        app:strokeWidth="2dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>        <!-- Enhanced Challenge Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvChallengeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🎯 CHALLENGE MINGGU INI"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔥"
                        android:textSize="20sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvChallengeTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Target: Kumpulkan 50 sampah"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <!-- Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <ProgressBar
                        android:id="@+id/progressChallenge"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progress="0"
                        android:max="50"
                        android:progressTint="@color/environmental_green"
                        android:progressBackgroundTint="@color/light_gray"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvChallengeProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Progress: 0/50 (0%)"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvChallengeRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sisa: 7 hari lagi"
                    android:textSize="14sp"
                    android:textColor="@color/text_tertiary"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>        <!-- Enhanced Daily Tip -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/environmental_green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_white_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tip Hari Ini"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDailyTip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bawa botol minum sendiri untuk mengurangi sampah plastik!"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>        <!-- Enhanced Recent Activity Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📈 AKTIVITAS TERAKHIR"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewAllHistory"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Lihat Semua"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/environmental_green"
                        android:minWidth="0dp"
                        android:padding="8dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>        <!-- Enhanced Start Plogging Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartPlogging"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:text="🏃‍♂️ MULAI PLOGGING SEKARANG"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:cornerRadius="32dp"
            app:backgroundTint="@color/environmental_green"
            app:elevation="8dp"
            app:icon="@drawable/ic_play_arrow"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- Add some bottom padding -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>
</ScrollView>