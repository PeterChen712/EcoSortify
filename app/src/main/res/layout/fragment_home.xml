<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/environmental_green">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_run"
                        app:tint="@android:color/white"
                        android:contentDescription="App Icon" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glean Go"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                    <TextView
                        android:id="@+id/tvWelcomeUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back!"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications_bell"
                app:tint="@color/environmental_green"
                android:contentDescription="Notifications"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_bar_chart"
                            app:tint="@color/environmental_green"
                            android:contentDescription="Statistics Icon" />

                        <TextView
                            android:id="@+id/tvQuickStatsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Statistik Keseluruhan"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/circle_indicator"
                        android:backgroundTint="@color/environmental_green" />

                </LinearLayout>                <!--
                Achievement Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/gradient_background_welcome"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_star"
                        app:tint="@android:color/white"
                        android:contentDescription="Achievement Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status Pencapaian"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvAchievementStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terus semangat! Kamu sudah berkontribusi untuk lingkungan."
                            android:textSize="13sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9" />

                    </LinearLayout>

                </LinearLayout>                <!--
                Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Total Lari -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp"
                        android:layout_marginBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            app:cardBackgroundColor="@color/light_green"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_run"
                                app:tint="@color/environmental_green"
                                android:contentDescription="Running Icon" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Lari"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="start|center_vertical" />

                        <TextView
                            android:id="@+id/tvQuickStatsDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.5 km"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:gravity="end|center_vertical" />

                    </LinearLayout>

                    <!-- Poin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp"
                        android:layout_marginBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            app:cardBackgroundColor="@color/light_green"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star"
                                app:tint="@color/environmental_green"
                                android:contentDescription="Star Icon" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Poin"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="start|center_vertical" />

                        <TextView
                            android:id="@+id/tvQuickStatsPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:gravity="end|center_vertical" />

                    </LinearLayout>

                    <!-- Sampah Terkumpul -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp"
                        android:layout_marginBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            app:cardBackgroundColor="@color/light_green"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_trash_can"
                                app:tint="@color/environmental_green"
                                android:contentDescription="Trash Icon" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sampah Terkumpul"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="start|center_vertical" />

                        <TextView
                            android:id="@+id/tvQuickStatsTrash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:gravity="end|center_vertical" />

                    </LinearLayout>

                    <!-- Badge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            app:cardBackgroundColor="@color/light_green"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_trophy"
                                app:tint="@color/environmental_green"
                                android:contentDescription="Trophy Icon" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Badge"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="start|center_vertical" />

                        <TextView
                            android:id="@+id/tvQuickStatsBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eco Beginner"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:gravity="end|center_vertical" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Quick Action Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_flash"
                        app:tint="@color/environmental_green"
                        android:contentDescription="Quick Action Icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aksi Cepat"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickAction1"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Mulai Plogging"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/environmental_green"
                        android:textColor="@android:color/white"
                        app:elevation="4dp"
                        app:icon="@drawable/ic_run"
                        app:iconTint="@android:color/white"
                        app:iconGravity="start" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickAction2"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Lihat Statistik"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/environmental_green"
                        android:textColor="@color/environmental_green"
                        app:strokeWidth="2dp"
                        app:icon="@drawable/ic_bar_chart"
                        app:iconTint="@color/environmental_green"
                        app:iconGravity="start" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickAction3"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Berita Lingkungan"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/environmental_green"
                        android:textColor="@color/environmental_green"
                        app:strokeWidth="2dp"
                        app:icon="@drawable/ic_news"
                        app:iconTint="@color/environmental_green"
                        app:iconGravity="start" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickAction4"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Peta"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/environmental_green"
                        android:textColor="@color/environmental_green"
                        app:strokeWidth="2dp"
                        app:icon="@drawable/ic_map"
                        app:iconTint="@color/environmental_green"
                        app:iconGravity="start" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Challenge Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/tvChallengeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Challenge Minggu Ini"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        app:drawableStartCompat="@drawable/ic_target"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/environmental_green" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fire"
                        app:tint="@color/environmental_green"
                        android:contentDescription="Fire Icon" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvChallengeTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Target: Kumpulkan 50 sampah"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <!-- Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <ProgressBar
                        android:id="@+id/progressChallenge"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progress="0"
                        android:max="50"
                        android:progressTint="@color/environmental_green"
                        android:progressBackgroundTint="@color/light_gray"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvChallengeProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Progress: 0/50 (0%)"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvChallengeRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sisa: 7 hari lagi"
                    android:textSize="14sp"
                    android:textColor="@color/text_tertiary"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Daily Tip -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/environmental_green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_white_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lightbulb"
                        app:tint="@color/environmental_green"
                        android:contentDescription="Lightbulb Icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tip Hari Ini"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDailyTip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bawa botol minum sendiri untuk mengurangi sampah plastik!"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Recent Activity Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AKTIVITAS TERAKHIR"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        app:drawableStartCompat="@drawable/ic_trending_up"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/environmental_green" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewAllHistory"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Lihat Semua"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/environmental_green"
                        android:minWidth="0dp"
                        android:padding="8dp"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconGravity="end"
                        app:iconTint="@color/environmental_green" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Start Plogging Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartPlogging"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:text="MULAI PLOGGING SEKARANG"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:cornerRadius="32dp"
            app:backgroundTint="@color/environmental_green"
            app:elevation="8dp"
            app:icon="@drawable/ic_play_arrow"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white" />

        <!-- Add some bottom padding -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>
</ScrollView>