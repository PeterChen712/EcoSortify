<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- News Image Styles -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- News Card Styles -->
    <style name="NewsCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="rippleColor">@color/environmental_green</item>
    </style>
    
    <!-- News Title Style -->
    <style name="NewsTitleStyle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <!-- News Preview Style -->
    <style name="NewsPreviewStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:alpha">0.8</item>
    </style>
    
    <style name="NewsCategory" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    
    <style name="NewsDate" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:alpha">0.7</item>
    </style>
    
    <!-- Home Fragment Enhanced Styles -->
    <style name="HomeCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>
    
    <style name="HomeSectionTitleStyle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="HomeStatTextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    
    <style name="HomeQuickActionButton" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">4dp</item>
        <item name="android:minHeight">60dp</item>
    </style>
    
    <style name="HomeQuickActionButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/environmental_green</item>
        <item name="android:textColor">@color/environmental_green</item>
        <item name="android:minHeight">60dp</item>
    </style>
      <!-- Tab Text Style for Community Feature -->
    <style name="TabTextStyle" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>    <!-- Modern Switch Style -->
    <style name="ModernSwitchStyle" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- Settings Dialog Styles -->
    <style name="SettingsDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@color/dialog_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <style name="SettingsItemTextStyle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SettingsDescriptionTextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Auth Screen Styles -->
    <style name="AuthTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/auth_accent</item>
        <item name="hintTextColor">@color/auth_secondary_text</item>
        <item name="android:textColorHint">@color/auth_secondary_text</item>
    </style>

    <style name="AuthButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/auth_accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>